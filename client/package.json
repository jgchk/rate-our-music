{
  "name": "rate-our-music",
  "scripts": {
    "dev": "NODE_ENV=development concurrently 'webpack serve' 'yarn gql:dev'",
    "prod": "NODE_ENV=production webpack",
    "gql": "yarn gql:plugins && yarn gql:codegen",
    "gql:dev": "yarn gql:plugins && yarn gql:codegen --watch",
    "gql:plugins": "tsc --build ./graphql-code-generator/tsconfig.json",
    "gql:codegen": "graphql-codegen --config codegen.yml"
  },
  "browserslist": {
    "modern": [
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Edge versions",
      "last 2 Opera versions"
    ],
    "legacy": [
      "defaults"
    ]
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "odiff": "^1.4.3",
    "preact": "^10.5.13",
    "preact-feather": "^4.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-operations": "1.17.15",
    "@graphql-codegen/visitor-plugin-common": "^1.19.1",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.0.1",
    "css-loader": "^5.2.0",
    "esbuild-loader": "^2.11.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "fork-ts-checker-webpack-plugin": "^6.2.0",
    "graphql": "^15.5.0",
    "html-webpack-plugin": "^5.3.1",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.4.1",
    "postcss": "^8.2.9",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-loader": "^5.2.0",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^21.0.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^3.2.0",
    "webpack": "^5.31.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "simple-git-hooks": {
    "pre-commit": "cd client && yarn lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
