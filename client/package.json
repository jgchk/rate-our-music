{
  "name": "rate-our-music",
  "scripts": {
    "dev": "concurrently 'NODE_ENV=development snowpack dev' 'yarn gql:codegen --watch'",
    "prod": "NODE_ENV=production snowpack build",
    "gql": "yarn gql:plugins && yarn gql:codegen",
    "gql:plugins": "tsc --build ./gql-plugins/tsconfig.json",
    "gql:codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "clsx": "^1.1.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "fp-ts": "^2.9.5",
    "preact": "^10.5.13",
    "preact-feather": "^4.2.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-generic-sdk": "^1.17.9",
    "@graphql-codegen/typescript-operations": "1.17.15",
    "@graphql-codegen/visitor-plugin-common": "^1.19.1",
    "@prefresh/snowpack": "^3.1.2",
    "@snowpack/plugin-postcss": "^1.2.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "auto-bind": "^4.0.0",
    "concurrently": "^6.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "graphql": "^15.5.0",
    "http-proxy": "^1.18.1",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0",
    "snowpack": "^3.1.2",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^21.0.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^3.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "cd client && yarn lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
