{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "ES2017", "ES2019.Array"],
    "target": "ES2017",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    "jsx": "preserve",
    "jsxImportSource": "preact",

    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*", "./types/**/*"]
}
